<% include ../partials/header %>

<div class="main ui container">
    <div class="ui centered grid">
        <div class="row"><h1><%= item.name %></h1></div>
        <div class="row"><h2>Amount left: <%= item.total %></h2></div>
        <div class="row>"><h3>Owner: <%= item.owner %></h3></div>
    </div>

    <% if (currentUser.username === item.owner) { %>
        <div class="ui centered grid">
            <button onclick="showAddAmountForm()">Add Amount</button>
            <a href="/items/<%= item._id %>/edit"><button>Edit</button></a>
            <button onclick="showInviteForm()">Invite</button>
        </div>
        <div class="ui centered grid">
            <div id="addAmount" style="display:none;">
                <form action="/items/<%= item._id %>/add?_method=PUT" method="POST">
                    <input type="number" name="total" placeholder="amount">
                    <button type="submit">Add</button>
                </form>
            </div>
            <div id="invite" style="display:none;">
                <div>
                    <input style="width:355px" type="text" id="itemLink" value="https://ticker_tracker.com/<%= item._id %>" readonly>
                    <button type="submit" onclick="copyLink()">Copy</button>
                </div>
            </div>
        </div>
        
    <% } %>
    
    <div>
        <h1>Participants</h1>
        <div class="ui cards">
            <% item.users.forEach(function(user) { %>
                <div class="card">
                    <div class="content">
                        <div class="header"><%= user.username %></div>
                        <div class="description">
                            <p>used: <%= user.amount %></p>
                            <% if (currentUser._id.equals(user._id)) { %>
                                <form action="/items/<%= item._id %>?_method=PUT" method="POST">
                                    <input type="number" name="amount" placeholder="amount" min="0">
                                    <button type="submit">Enter</button>
                                </form>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>

<% include ../partials/footer %>