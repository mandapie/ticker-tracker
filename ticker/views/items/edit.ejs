<% include ../partials/header %>

<div class="main ui text container">
    <h1>Edit <%= item.name %></h1>
    <form class=" ui form" action="/items/<%= item._id %>/edit?_method=PUT" method="POST">
        <div class="field">
            <input type="text" name="name" placeholder="item name" value="<%= item.name %>" required>
        </div>
        <div class="field">
            <input type="number" name="total" placeholder="total amount" value="<%= item.total.toString() %>" min="0" required>
        </div>
        <button class="ui submit button">Edit</button>
    </form>
    <button onclick="areYouSureDialog()">Delete</button>
    
    <a href="/items/<%= item._id %>">Back to <%= item.name %></a>
    
    <div id="areYouSure" class="ui modal">
        <i class="close icon"></i>
        <div class="header">Delete</div>
        <div class="content">
            <div class="description">Are you sure you want to DELETE this item?</div>
        </div>
        <div class="actions">
            <button class="ui button" id="cancelButton">Cancel</button>
            <form action="/items/<%= item._id %>?_method=DELETE" method="POST">
                <button class="ui button">OK</button>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>